        "description": {
          "type": "string"
        },
        "link": {
          "$ref": "Link"
        }
      }
    },
    "Link": {
      "id": "Link",
      "properties": {
        "link_type": {
          "type": "string"
        },
        "interfaces": {
          "$ref": "Interface"
        }
      }
    }
  }
