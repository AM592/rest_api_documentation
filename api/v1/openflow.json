  "models": {
    "Openflow": {
      "id": "Openflow",
      "properties": {
        "hostname": {
          "type": "string"
        },
        "switch_model": {
          "type": "string"
        },
        "switch_type": {
          "type": "string"
        },
        "openflow_version": {
          "type": "string"
        },
        "switch_OS": {
          "type": "string"
        },
        "datapath_id": {
          "type": "string"
        },
        "interfaces":{
          "$ref": "Interface"
        },
        "of_controller_ip": {
          "type": "IP"
        },
        "of_controller_port": {
          "type": "string"
        }
      }
    },
    "IP": {
      "id": "IP",
      "properties": {
        "address": {
          "type": "string"
        },
        "netmask": {
          "type": "string"
        },
        "ip_type": {
          "type": "string",
          "description": "type of ip",
          "enum": [
            "ipv4",
            "ipv6"
          ]
        },
        "interface": {
          "$ref": "Interface"
        }
      }
    },
    "Interface": {
